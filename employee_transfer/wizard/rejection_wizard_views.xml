<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="rejection_wizard_form">
            <field name="name">rejection.wizard.view.form</field>
            <field name="model">rejection.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="reason"/>
                    </group>
                    <footer>
                        <button name="action_done" string="Submit" type="object"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>