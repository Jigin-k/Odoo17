<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_brand.view_product_brand_form" model="ir.ui.view">
        <field name="name">product.brand.form</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <form string="Brands">
                <group>
                <field name="name"/>
                </group>
            </form>
        </field>
    </record>


    <record id="product_brand.view_product_brand_tree" model="ir.ui.view">
        <field name="name">product.brand.tree</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <tree string="brands">

                <field name="name"/>
            </tree>
        </field>
    </record>


    <record id="product_brand.action_product_brand" model="ir.actions.act_window">
        <field name="name">Product Brands</field>
        <field name="res_model">product.brand</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>