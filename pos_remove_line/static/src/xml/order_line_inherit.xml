<?xml version="1.0" encoding="utf-8"?>

<templates xml:space="preserve">
    <t t-name="pos_remove_line.order_line_remove" t-inherit="point_of_sale.Orderline"
       t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('product-price')]" position="after">
                <i class="btn btn-secondary btn-sm fa fa-trash "
                        t-on-click="removeLine" style="margin-left:10px;"/>
        </xpath>
    </t>
</templates>