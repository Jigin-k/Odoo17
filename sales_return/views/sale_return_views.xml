<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_return_view_form" model="ir.ui.view">
        <field name="name">sale.return.view.form</field>
        <field name="model">sale.return</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="return_confirm" string="Confirm"
                            class="oe_highlight"
                            type="object" invisible="state != 'draft'"/>
                     <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirm,done"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <div class="oe_title">
                                <h1>
                                    <field name="name"/>
                                </h1>
                            </div>
                            <field name="sale_order"/>
                            <field name="partner_id"/>
                            <field name="create_date"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="product_id"/>
                            <field name="quantity"/>
                        </group>
                    </group>
                    <group>
                        <notebook>
                            <page string="Reason" name="reason">
                                <field name="reason"/>
                            </page>
                            <page string="Transfers" name="stock_move">
                                <field name="source_pick"/>
                            </page>
<!--                            <page string="Return Picking" name="return_picking">-->
<!--                                <field name="stock_picking"/>-->
<!--                            </page>-->
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="sale_return_view_tree" model="ir.ui.view">
        <field name="name">sale.return.view.list</field>
        <field name="model">sale.return</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="sale_order"/>
                <field name="partner_id"/>
                <field name="create_date"/>
                <field name="user_id"/>
                <field name="product_id" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="action_sale_return" model="ir.actions.act_window">
        <field name="name">Sale Return</field>
        <field name="res_model">sale.return</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="sale_return_menu"
              parent="sale.sale_menu_root"
              name="Return Orders"
              action="sales_return.action_sale_return"/>
</odoo>
