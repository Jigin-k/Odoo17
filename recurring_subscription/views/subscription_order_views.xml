<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="order_list_view">
        <field name="name">subscription.order.tree</field>
        <field name="model">subscription.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="order_id"/>
                <field name="establishment_id"/>
                <field name="order_date"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="subscription_order_search" model="ir.ui.view">
        <field name="name">subscription.order.search</field>
        <field name="model">subscription.order</field>
        <field name="arch" type="xml">
            <search>
                <field name="establishment_id"/>
                <field name="product_id"/>
                <filter string="Is Lead" name="is_lead" domain="[('is_lead', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Establishment Id" name="establishment_id"
                            context="{'group_by': 'establishment_id'}"/>
                    <filter string="Product" name="product_id" context="{'group_by': 'product_id'}"/>
                </group>
            </search>
        </field>
    </record>


    <record model="ir.ui.view" id="order_form_view">
        <field name="name">subscription.order.form</field>
        <field name="model">subscription.order</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" class="oe_highlight" invisible="state not in('draft')"
                            string="Confirm" type="object"/>
                    <button name="action_cancel" class="oe_highlight" invisible="state in('cancel')" string="Cancel"
                            type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done,cancel"/>
                </header>
                <sheet>
                    <h1>
                        <field name="order_id"/>
                    </h1>
                    <group col="2">
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="product_id"/>
                            <field name="is_lead"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="establishment_id"/>
                            <field name="company_id"/>
                            <field name="order_date"/>
                            <field name="next_billing"/>
                            <field name="due_date"/>
                            <field name="recurring_price"/>
                            <field name="bill_id"/>
                        </group>
                    </group>
                    <notebook>
                        <!--                        <page string="Bill Scheduled">-->
                        <!--                            <field name="bill_ids"/>-->
                        <!--                        </page>-->
                        <page string="Terms and Conditions">
                            <field name="description" widget="html"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <data>
        <record id="adding_subscription_product" model="product.template">
            <field name="name">Demo Subscription Product</field>
            <field name="detailed_type">service</field>
            <field name="default_code">Subscription Credit</field>
        </record>
    </data>
</odoo>