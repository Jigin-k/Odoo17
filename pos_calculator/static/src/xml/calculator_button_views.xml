<?xml version="1.0" encoding="utf-8"?>

<templates xml:space="preserve">
    <t t-name="pos_calculator.calculator_button" t-inherit="point_of_sale.ControlButtons"
       t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('control-buttons')]" position="inside">
                <button class="control-button btn btn-secondary btn-lg py-5"
                t-on-click="() => this.CalculatorPopup()" >
                    <i class="fa fa-calculator"/>
                    <span>Calculator</span>
                </button>
        </xpath>
    </t>
</templates>
